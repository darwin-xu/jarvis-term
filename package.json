{
    "name": "ssh-terminal-tool",
    "version": "0.1.0",
    "main": "dist/backend/server.js",
    "scripts": {
        "build": "rm -rf dist && npm run build:server && npm run build:client && npm run copy:static",
        "build:server": "tsc -p tsconfig.backend.json",
        "build:client": "tsc -p tsconfig.frontend.json",
        "copy:static": "mkdir -p dist/frontend && cp -R public/* dist/frontend/",
        "start": "npm run build && node dist/backend/server.js",
        "dev": "npm run build && node dist/backend/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "dependencies": {
        "cookie-parser": "^1.4.7",
        "express": "^4.18.2",
        "express-ws": "^5.0.2",
        "ssh2": "^1.11.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.9",
        "@types/express": "^5.0.3",
        "@types/express-ws": "^3.0.5",
        "@types/jest": "^29.5.5",
        "@types/node": "^24.0.10",
        "@types/ssh2": "^1.15.5",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.8.3"
    }
}
