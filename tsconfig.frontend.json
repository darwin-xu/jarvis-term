{
    "compilerOptions": {
        "target": "ES2020",
        "module": "none",
        "lib": ["ES2020", "DOM"],
        "outDir": "./dist/frontend",
        "rootDir": "./src/frontend",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "sourceMap": true
    },
    "include": ["src/frontend/**/*"],
    "exclude": ["node_modules", "dist", "server.ts"]
}
